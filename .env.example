# PostgreSQL Configuration
POSTGRES_USER=yalom_user
POSTGRES_PASSWORD=yalom_password
POSTGRES_DB=yalom_transcripts
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://yalom_user:yalom_password@localhost:5432/yalom_transcripts

# Vector Store Configuration (Hybrid approach)
# Options: 'qdrant' (local Docker) or 'pinecone' (cloud)
VECTOR_STORE=qdrant

# Qdrant (local development)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=huberman_transcripts
# QDRANT_API_KEY=  # Optional, only for Qdrant Cloud

# Pinecone (production/testing)
# PINECONE_API_KEY=your-pinecone-api-key-here
# PINECONE_INDEX=yalom-transcripts
# PINECONE_ENVIRONMENT=gcp-starter

# LLM API Keys
GROQ_YALOM_API_KEY=your-groq-api-key-here

# TapeSearch API Configuration
# Get your API key from https://www.tapesearch.com/api/keys
TAPESEARCH_API_KEY=your_tapesearch_api_key_here

# Vectorization Configuration
# Chunk size: smaller = faster responses, more precise; larger = better context
CHUNK_SIZE=500          # Characters per chunk (default: 500, recommended: 400-1000)
CHUNK_OVERLAP=100       # Overlap between chunks (default: 100, recommended: 20% of chunk_size)
CHUNKING_STRATEGY=recursive  # Strategy: recursive, character, or token

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=huberman_transcripts

# RAG Configuration
RAG_TOP_K=7                      # Final number of chunks to return after filtering (default: 7)
RAG_RETRIEVAL_MULTIPLIER=3       # Retrieve top_k Ã— multiplier candidates (default: 3, retrieves 21)
RAG_SIMILARITY_THRESHOLD=0.5     # Minimum cosine similarity 0-1 (default: 0.5, filters weak matches)
RAG_TEMPERATURE=0.7              # LLM creativity (0.0-1.0, lower=factual, higher=creative)
RAG_QUERY_REWRITING=true         # Enable query rewriting for better retrieval (default: true)
RAG_RERANKING=false              # Enable cross-encoder re-ranking - slower but more accurate (default: false)

# Logging
LOG_LEVEL=INFO
